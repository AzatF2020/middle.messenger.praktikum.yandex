<form class="login-form" action="/" novalidate method="POST">
    <h1 class="heading-6 login-form__title">Вход</h1>

    <fieldset class="login-form__group">
        <div class="input-floating">
            <input type="text" id="login" name="login" placeholder="Логин" class="input" />
            <label for="login" class="label">Логин</label>
        </div>
        <div class="input-floating">
            <input type="password" id="password" name="password" placeholder="Пароль" class="input" />
            <label for="password" class="label">Пароль</label>
        </div>
    </fieldset>

    <div class="login-form__bottom">
        <button class="button login-form__bottom-button" type="submit">Авторизоваться</button>
        <a href="/#" class="link">Нет аккаунта?</a>
    </div>
</form>
