<div class="chat-item__main-message {{#ifCond user_id '==' myId}}chat-item__main-message--myself{{else}}chat-item__main-message--sender{{/ifCond}}">
  <div class="chat-item__main-message-top">
    {{#ifCond user_id '!=' myId}}
      {{#if display_name}}
        <span class="chat-item__user-name">{{ display_name }}</span>
      {{else if login }}
        <span class="chat-item__user-name">{{ login }}</span>
      {{/if}}
    {{/ifCond}}

    {{#if content}}
      {{#unless file}}
        <span class="chat-item__main-message-content">{{content}}</span>
      {{/unless}}
    {{/if}}
  </div>

  {{#if file}}
    {{{Button
      class="chat-item__button-image"
      imgSource=imgSource
      onClick=openModalImage
      loading="lazy"
    }}}
  {{/if}}

  {{#if time}}
    <time
      datetime="{{time}}"
      class="text-7 chat-item__main-message-time"
    >
      {{formattedTime}}
    </time>
  {{/if}}

  <svg class="chat-item__main-message-appendix" width="9" height="20" class="svg-appendix">
    <g fill="none" fill-rule="evenodd">
      <path d="M6 17H0V0c.193 2.84.876 5.767 2.05 8.782.904 2.325 2.446 4.485 4.625 6.48A1 1 0 016 17z" fill="#000" filter="url(#messageAppendix)"></path>
      <path d="M6 17H0V0c.193 2.84.876 5.767 2.05 8.782.904 2.325 2.446 4.485 4.625 6.48A1 1 0 016 17z" fill="#EEFFDE" class="corner"></path>
    </g>
  </svg>
</div>
