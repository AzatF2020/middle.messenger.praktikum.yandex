<input
    type="{{#if type}}{{type}}{{else}}text{{/if}}"
    class="input {{class}}"
    id="{{ id }}"
    autocomplete="off"
    name="{{ name }}"
    placeholder="{{ placeholder }}"
    value="{{ value }}"
    {{#if disabled}} disabled {{/if}}
    {{#if readonly}} readonly {{/if}}
    {{#if required}} required {{/if}}
/>
